extends layout 

block vista
    div(class="container mt-3")
        div(class="jumbotron")
            h1(style="color:blue") Vista de Productos
            br
            if productos
                div(class="table-responsive")
                    table(class="table table-dark")
                        tr(class="text-white fw-bold") 
                            th ID
                            th Nombre
                            th Precio
                            th Imagen
                        each prod in productos
                            tr
                                td(class="align-middle")= prod.id
                                td(class="align-middle")= prod.title
                                td(class="align-middle")= '$' + prod.price
                                td(class="align-middle") 
                                    img(src=prod.thumbnail style="width: 80px")
            else
                h3(class="alert alert-danger") No se encontraron productos
            br
            a(href="/" method="GET" class="bg-primary text-white border rounded p-2") Formulario de carga
