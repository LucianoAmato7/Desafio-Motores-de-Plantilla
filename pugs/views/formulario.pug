extends layout 

block formulario
    div(class="container mt-3")
        div(class="jumbotron")
            h1(style="color:blue") Ingrese datos
            br
            form(action="/productos" method="post")
                div(class="form-group")
                    label(for="nombre")
                        b Nombre
                    input(type="text" id="nombre" class="form-control" name="title")
                div(class="form-group")
                    label(for="Precio")
                        b Precio
                    input(type="number" id="Precio" class="form-control" name="price")
                div(class="form-group")
                    label(for="URLImagen")
                        b URL imagen
                    input(type="url" id="URLImagen" class="form-control" name="thumbnail")
                button(type="submit" value="Enviar datos" class="btn btn-success mt-3 mb-5") Enviar
            a(href="/productos" method="GET" class="bg-primary text-white border rounded p-2") Vista de Productos


